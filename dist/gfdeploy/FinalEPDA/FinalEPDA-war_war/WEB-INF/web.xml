<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignLTD</servlet-name>
        <servlet-class>controller.AssignLTD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignSTC</servlet-name>
        <servlet-class>controller.AssignSTC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Class</servlet-name>
        <servlet-class>controller.Class</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>controller.Delete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>controller.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Attendance</servlet-name>
        <servlet-class>controller.TakeAtt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAtt</servlet-name>
        <servlet-class>controller.TakeAtt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarkAtt</servlet-name>
        <servlet-class>controller.MarkAtt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifyAtt</servlet-name>
        <servlet-class>controller.modifyAtt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignLTD</servlet-name>
        <url-pattern>/AssignLTD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignSTC</servlet-name>
        <url-pattern>/AssignSTC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Class</servlet-name>
        <url-pattern>/Class</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Attendance</servlet-name>
        <url-pattern>/Attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAtt</servlet-name>
        <url-pattern>/TakeAtt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarkAtt</servlet-name>
        <url-pattern>/MarkAtt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifyAtt</servlet-name>
        <url-pattern>/modifyAtt</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
